@model AdsViewModel
<!DOCTYPE html>

<div b-gyvb0mk0dj class="container" style="margin-top:80px;">
    <main b-gyvb0mk0dj role="main" class="pb-3">
        @if (Model.Ads != null)
        {

            @foreach (var a in Model.Ads)
            {
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <div class="bg-light p-4 rounded shadow mb-3">
                            <h5>Listed by: @a.Name</h5>
                            <h5>Listed on @a.Date</h5>
                            <h5>Phone Number: @a.PhoneNumber</h5>
                            <h3>Details:</h3>
                            <p>@a.Details</p>
                              @if (Model.User != null && Model.User.Id == a.UserId)
                    {
                    <form method="post" action="/home/delete" class="mt-4">
                    <input type="hidden" value="@a.Id" name="id" />
                    <button class="btn btn-danger">Delete</button>
                    </form>
                    }
                        </div>
                    </div>
                </div>
            }
        }


    </main>
</div>
